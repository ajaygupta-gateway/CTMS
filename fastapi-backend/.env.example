# FastAPI Backend Environment Variables Template
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME=CTMS FastAPI Backend
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security
# Generate a new secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=20
REFRESH_TOKEN_EXPIRE_DAYS=3

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5173,http://localhost:5173

# Database Configuration
# PostgreSQL with asyncpg (recommended)
DATABASE_URL=postgresql+asyncpg://ctms_user:ctms_password@localhost:5432/ctms_db

# For SQLite (alternative - not recommended for production)
# DATABASE_URL=sqlite+aiosqlite:///./ctms.db

# Email Configuration (for production)
EMAIL_BACKEND=console  # Options: console, smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True
EMAIL_FROM=noreply@ctms.com

# Redis Configuration (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
MAX_SESSIONS_PER_USER=3

# Logging
LOG_LEVEL=INFO
