# Backend Environment Variables Template
# Copy this file to .env and fill in the values

# Django Settings
# SECURITY WARNING: Keep the secret key used in production secret!
# Generate a new one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (1 for True, 0 for False)
# SECURITY WARNING: Don't run with debug turned on in production!
DEBUG=1

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated)
# Add your frontend URL here
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5173,http://localhost:5173,http://localhost:8000,http://127.0.0.1:8000

# Database Configuration (for production)
# Uncomment and configure for PostgreSQL
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=ctms_db
# DATABASE_USER=ctms_user
# DATABASE_PASSWORD=your-db-password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# Email Configuration (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# JWT Settings (optional, defaults are in settings.py)
# ACCESS_TOKEN_LIFETIME_MINUTES=20
# REFRESH_TOKEN_LIFETIME_DAYS=3

# Security Settings (for production)
# SECURE_SSL_REDIRECT=1
# SESSION_COOKIE_SECURE=1
# CSRF_COOKIE_SECURE=1
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=1
# SECURE_HSTS_PRELOAD=1

# Rate Limiting (optional)
# RATE_LIMIT_ENABLED=1
# RATE_LIMIT_PER_MINUTE=60

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO
